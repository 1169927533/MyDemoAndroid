<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/re_itemshop"
    android:paddingBottom="5dp"
    android:background="#ffffff"
    android:paddingTop="5dp">

    <RelativeLayout
        android:id="@+id/re_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_shopitem"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/titleView"
            android:layout_centerVertical="true"

            android:padding="5dp"
            android:scaleType="centerCrop" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_shopitem"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_shopitemtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="dsasas"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_shopitemprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_shopiteminformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/img_shopitem"
            android:background="#8A000000"></View>
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ly_loadmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tx_loadmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加載。。。。" />
    </LinearLayout>

</RelativeLayout>