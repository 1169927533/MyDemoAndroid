<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".ui.shop.ShopInformationActivity">

    <com.example.a11699.mydemo.widget.TitleView
        android:id="@+id/titleView"
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        app:title="商户详情"></com.example.a11699.mydemo.widget.TitleView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/re_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/img_shopitem"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"

                android:padding="5dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_shopitem"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_shopitemtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="dsasas"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_shopitemprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_shopiteminformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/location" />

            <TextView
                android:id="@+id/tx_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:background="#1A000000"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tel" />

            <TextView
                android:id="@+id/tx_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:background="#1A000000"></View>

        <Button
            android:layout_gravity="center"
            android:background="#54000000"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="查看评论"
            android:textSize="25sp"
            android:textColor="#ffffff"
            />
    </LinearLayout>
</LinearLayout>