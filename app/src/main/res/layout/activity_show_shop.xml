<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.shopflipper.ShowShopActivity">

    <com.example.a11699.mydemo.widget.TitleView
        android:id="@+id/titleView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="全部商户"
        app:menustring="菜单"
        ></com.example.a11699.mydemo.widget.TitleView>

    <ViewFlipper
        android:background="#ffffff"
        android:id="@+id/vf_showshop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="@+id/titleView2"
        app:layout_constraintTop_toBottomOf="@+id/titleView2"></ViewFlipper>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_showshop"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="页数"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>